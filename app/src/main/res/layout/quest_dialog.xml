<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/diary_back"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_btn_stop"
        android:layout_width="138dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_btn_start"
        app:srcCompat="@drawable/icon_muk" />

    <ImageView
        android:id="@+id/image_btn_start"
        android:layout_width="138dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_btn_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_muk" />

    <TextView
        android:id="@+id/quest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/font1"
        android:text="Quest Title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quest_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font1"
        android:text="Quest Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_title" />

    <TextView
        android:id="@+id/time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/font1"
        android:text="Time Remaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_details" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:max="1800"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/image_btn_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/time_remaining" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-97dp"
        android:layout_marginEnd="-105dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/font1"
        android:text="시작"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/image_btn_start"
        app:layout_constraintTop_toBottomOf="@+id/image_btn_start" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-97dp"
        android:layout_marginEnd="-116dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/font1"
        android:text="일시정지"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/image_btn_stop"
        app:layout_constraintTop_toBottomOf="@+id/image_btn_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>
